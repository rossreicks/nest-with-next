{
	"name": "nest-with-next",
	"version": "1.0.0",
	"description": "Template for a NestJS application with a NextJS frontend",
	"type": "module",
	"scripts": {
		"dev": "pnpm --filter ./packages/server start:dev",
		"start": "pnpm --filter ./packages/server start:prod",
		"build": "pnpm --parallel build",
		"lint": "pnpm exec biome lint --write",
		"format": "pnpm exec biome format --write"
	},
	"keywords": [
		"template",
		"nestjs",
		"nextjs",
		"monorepo"
	],
	"author": "Ross Reicks",
	"license": "UNLICENSED",
	"packageManager": "pnpm@10.23.0",
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"lefthook": "^2.0.4",
		"ts-node": "^10.9.2"
	}
}
